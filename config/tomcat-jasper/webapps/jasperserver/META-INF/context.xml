<?xml version="1.0" encoding="UTF-8"?>
<Context crossContext="true" debug="5" path="/jasperserver" reloadable="false">
            
    <!-- maxActive: Maximum number of dB connections in pool. Make sure you
         configure your mysqld max_connections large enough to handle
         all of your db connections. Set to 0 for no limit.
    -->
    <!-- maxIdle: Maximum number of idle dB connections to retain in pool.
         Set to -1 for no limit.  See also the DBCP documentation on this
         and the minEvictableIdleTimeMillis configuration parameter.
     -->
    <!-- maxWait: Maximum time to wait for a dB connection to become available
         in ms, in this example 10 seconds. An Exception is thrown if
         this timeout is exceeded.  Set to -1 to wait indefinitely.
    -->
        
    <!-- Additional properties to consider. Settings for specifying a      -->
    <!-- validation query to help with reconnect/timeout errors.           -->
    <!-- Exact syntax may vary with database type (this tested on mysql.   -->
    <!--                                                                   -->
    <!--   validationQuery="select 1"                                      -->
    <!--   testOnBorrow="true"                                             -->
    <!--   (and add this to url property): &amp;autoReconnectForPools=true -->
        
        

    <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" maxActive="100" maxIdle="30" maxWait="10000" name="jdbc/jasperserver" password="metrics22" testOnBorrow="true" type="javax.sql.DataSource" url="jdbc:mysql://localhost:3306/jasperserver?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true&amp;autoReconnectForPools=true" username="pacific" validationQuery="SELECT 1"/>

    <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" maxActive="100" maxIdle="30" maxWait="10000" name="jdbc/devcdesbac" password="metrics22" testOnBorrow="true" type="javax.sql.DataSource" url="jdbc:mysql://localhost:3306/devcdesbac?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true&amp;autoReconnectForPools=true" username="pacific" validationQuery="SELECT 1"/>    

    

</Context>
