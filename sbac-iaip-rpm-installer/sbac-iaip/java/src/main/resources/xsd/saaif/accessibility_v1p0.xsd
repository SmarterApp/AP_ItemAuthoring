<!-- Include accessibility types schema -->

  <xsd:include schemaLocation="saaifcommontypes_v1p0.xsd"/>
  <xsd:include schemaLocation="accessibilitytypes_v1p0.xsd"/>

<!-- Top-level item element -->

  <xsd:element name="apipAccessibility" type="apipAccessibilityType"/>

