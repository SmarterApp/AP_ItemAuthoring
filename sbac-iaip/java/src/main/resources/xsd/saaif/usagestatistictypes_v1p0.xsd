<!-- Define the basic types -->
<!-- Placeholders until the Assessment Item Usage Statistic Element Format is defined.-->

  <xsd:complexType name="statisticType">
  <xsd:annotation>
    <xsd:documentation xml:lang="en-US">
    Define the statistic type.
    Details are not specified.
    Any type of element is permitted.
    Add the schemaversion attribute to enable this to be a standalone document.
    </xsd:documentation>
  </xsd:annotation>
    <xsd:sequence>
      <xsd:any namespace="##any" processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
    <xsd:attribute name="schemaversion" type="xsd:string"/>
  </xsd:complexType>     

</xsd:schema>
